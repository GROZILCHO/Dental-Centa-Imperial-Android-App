<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="7"
    android:orientation="vertical"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/shape"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
                android:id="@+id/web_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_padding"
                app:cardCornerRadius="@dimen/slider_margin"
                app:cardBackgroundColor="@color/colorPrimaryLight">

                <TextView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/link_to_website"
                    android:drawableStart="@drawable/globe_icon"
                    android:drawablePadding="@dimen/icon_padding"
                    android:textSize="@dimen/scrollbar_text_size"
                    android:padding="@dimen/slider_margin"
                    android:layout_marginBottom="@dimen/icon_padding"
                    android:gravity="center_vertical"
                    />

            </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
                android:id="@+id/map_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_padding"
                app:cardCornerRadius="@dimen/slider_margin"
                app:cardBackgroundColor="@color/colorPrimaryLight">

                <TextView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/link_to_google_maps"
                    android:drawableStart="@drawable/map_icon"
                    android:drawablePadding="@dimen/icon_padding"
                    android:textSize="@dimen/scrollbar_text_size"
                    android:padding="@dimen/slider_margin"
                    android:layout_marginBottom="@dimen/icon_padding"
                    android:textColorLink="@color/colorSecondaryText"
                    android:gravity="center_vertical"
                    />

            </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
                android:id="@+id/phone_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_padding"
                app:cardCornerRadius="@dimen/slider_margin"
                app:cardBackgroundColor="@color/colorPrimaryLight">

                <LinearLayout
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/icon_padding"
                    android:paddingBottom="0dp"
                    android:gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/phone"
                        android:contentDescription="@string/phone_icon"
                        android:layout_marginTop="@dimen/icon_padding"
                        />

                    <LinearLayout
                        android:id="@+id/phones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tel_359_52_600_955"
                            android:textSize="@dimen/scrollbar_text_size"
                            android:paddingStart="@dimen/slider_margin"
                            android:paddingEnd="@dimen/slider_margin"
                            android:textColorLink="@color/colorSecondaryText"
                            android:autoLink="phone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mob_359_893_600_955"
                            android:textSize="@dimen/scrollbar_text_size"
                            android:paddingStart="@dimen/slider_margin"
                            android:paddingEnd="@dimen/slider_margin"
                            android:textColorLink="@color/colorSecondaryText"
                            android:autoLink="phone"/>

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
                android:id="@+id/schedule_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_padding"
                app:cardCornerRadius="@dimen/slider_margin"
                app:cardBackgroundColor="@color/colorPrimaryLight">

                <LinearLayout
                    android:id="@+id/working_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/slider_margin"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/clock"
                        android:contentDescription="@string/clock_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/schedule"
                            android:textSize="@dimen/scrollbar_text_size"
                            android:paddingStart="@dimen/slider_margin"
                            android:paddingEnd="@dimen/slider_margin"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"
                            android:layout_marginLeft="@dimen/slider_margin"
                            android:layout_marginRight="@dimen/slider_margin"
                            android:layout_marginTop="@dimen/icon_padding"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/work_time"
                            android:textSize="@dimen/scrollbar_text_size"
                            android:paddingStart="@dimen/slider_margin"
                            android:paddingEnd="@dimen/slider_margin"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
                android:id="@+id/weekdays_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_padding"
                app:cardCornerRadius="@dimen/slider_margin"
                app:cardBackgroundColor="@color/colorPrimaryLight">

                <TextView
                    android:id="@+id/working_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:drawableStart="@drawable/calendar_icon"
                    android:drawablePadding="@dimen/icon_padding"
                    android:textSize="@dimen/scrollbar_text_size"
                    android:padding="@dimen/slider_margin"
                    android:layout_marginBottom="@dimen/icon_padding"
                    android:gravity="center_vertical"/>

            </android.support.v7.widget.CardView>

</LinearLayout>